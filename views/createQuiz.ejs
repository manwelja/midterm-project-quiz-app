      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <!-- App CSS-->
    <link rel="stylesheet" href="/styles/home.css" type="text/css" />

    <!-- Imported Fonts From Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;900&family=Roboto+Flex:opsz,wght@8..144,100;8..144,200;8..144,300;8..144,400;8..144,500;8..144,600;8..144,700;8..144,800;8..144,900;8..144,1000&display=swap" rel="stylesheet">

    <title>Create Quiz</title>
  </head>

  <body class="home-body">
    <nav class="nav-bar">
      <div class="nav-buttons">
        <div class="home-button">Home</i></div>
        <div class="create-quiz">Create A Quiz</div>
      </div>
      <div class="app-title">Quizzy</div>
      <div class="user-login-logout">Login/Logout/Register</div>
    </nav>

    <header class="page-title">
      <div>Create A New Quiz:</div>
    </header>
    <div class="creation-container">
      <div class="meta-quiz-info">
        <div class="quiz-title-descrip">
        <form id="quiz-name">
          <textarea name="text" id="quiz-title-text" placeholder="Quiz Title..."></textarea>
        </form>
        <form id="quiz-description">
          <textarea name="text" id="quiz-descrip-text" placeholder="Enter a description for your quiz..."></textarea>
        </form>
        </div>
        <select name="private" id="privacy-toggle">
          <option value="choice" disabled selected hidden>Select Privacy Preference...</option>
          <option value="public">Public (default)</option>
          <option value="private">Private</option>
        </select>
      </div>
        <div class="question-indiv">
          <div class="question-lefhand">
            <div class="question-number">Question #1</div>
            <form id="question-descrip">
              <textarea name="text" id="question-text" placeholder="Write your question here..."></textarea>
            </form>
          </div>
          <div class="question-options">
            <form>
              <textarea name="text" id="question-text" placeholder="Fill in option A..."></textarea>
            </form>
            <form>
              <textarea name="text" id="question-text" placeholder="Fill in option B..."></textarea>
            </form>
            <form>
              <textarea name="text" id="question-text" placeholder="Fill in option C..."></textarea>
            </form>
            <form>
              <textarea name="text" id="question-text" placeholder="Fill in option D..."></textarea>
            </form>
          </div>
          <div class="right-question">
            <select name="correct-answer" id="answer-toggle" placeholder="Correct Answer (A-D)">
              <option value="choice" disabled selected hidden>Correct Answer (A-D)...</option>
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D">D</option>
            </select>
          </div>
          </div>
    </div>

    <footer></footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
