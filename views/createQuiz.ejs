  <body class="home-body">
    <nav class="nav-bar">
      <div class="nav-buttons">
        <div class="home-button">Home</i></div>
        <div class="create-quiz">Create A Quiz</div>
      </div>
      <div class="app-title">Quizzy</div>
      <div class="user-login-logout">Login/Logout/Register</div>
    </nav>

    <header class="page-title">
      <div>Create A New Quiz:</div>
    </header>
    <div class="creation-container">
      <form class="quiz-form" method="post">
        <div class="meta-quiz-info">
          <div class="meta-quiz-left">
            <textarea name="quiz-name" id="quiz-title-text" placeholder="Quiz Title..."></textarea>
            <textarea name="quiz-description" id="quiz-descrip-text" placeholder="Enter a description for your quiz..."></textarea>
            <textarea name="img-url-text" id="img-url-text" placeholder="Enter the display photo URL for your quiz..."></textarea>
          </div>
          <div style="visibility:hidden"><textarea name="quiz-owner" id="quiz-owner" style="visibility:hidden"><%= ownerId %></textarea></div>
          <div class="privacy-option">
            <input type="radio" id="public" name="privacy-setting" value="false" checked="checked">
            <label for="public">Public</label><br>
            <input type="radio" id="private" name="privacy-setting" value="true">
            <label for="private">Private</label>
          </div>
        </div>
        <div class="all-questions">
          <div class="question-indiv">
            <div class="question-top">
              <div class="question-number">Question #1</div>
              <textarea name="question-text" id="question-text" placeholder="Write your question here..."></textarea>
              <select name="correct-answer" id="answer-toggle" placeholder="Correct Answer (A-D)">
                <option value="choice" disabled selected>Correct Answer (A-D)...</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
              </select>
            </div>
            <div class="question-options">
              <textarea class="question-each-option" name="question-a-text" placeholder="Fill in option A..."></textarea>
              <textarea class="question-each-option" name="question-b-text" placeholder="Fill in option B..."></textarea>
              <textarea class="question-each-option" name="question-c-text" placeholder="Fill in option C..."></textarea>
              <textarea class="question-each-option" name="question-d-text" placeholder="Fill in option D..."></textarea>
            </div>
          </div>


        </div>

        <div class="add-question-button">
          <button type="button" id="add-question" class="btn btn-outline-primary">Add Another Question</button>
        </div>
        <div class="submit-quiz-button">
          <button type="submit" id="create-quiz" class="btn btn-outline-primary">Create Quiz</button>
        </div>
      </form>
    </div>

    <!--<div class="take-quiz-button"><button type="button" class="btn btn-outline-primary">Add Another Question</button></div>-->


  </body>
</html>

